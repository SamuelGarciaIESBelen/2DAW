<%@ page import="org.iesbelen.model.Usuario" %>
<%@ page import="java.util.Optional" %>

<nav>
    <ul>
        <li><a href="<%=application.getContextPath()%>">HOME</a></li>
        <li><a href="<%=application.getContextPath()%>/tienda/fabricantes">Fabricantes</a></li>
